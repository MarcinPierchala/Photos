@model List<MyPhoto>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                My Photo List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="MyPhoto" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create New Photo
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th> 
                <th>Category</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Author</td>
                    <td>@obj.Category.CategoryName</td>
                    <td>@obj.Price</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="MyPhoto" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="MyPhoto" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
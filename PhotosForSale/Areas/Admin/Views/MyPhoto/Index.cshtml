@model List<MyPhoto>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                My Photo List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="MyPhoto" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create New Photo
            </a>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th> 
                <th>Category</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>        
    </table>
</div>
@section Scripts{
    <script src="~/js/myPhotos.js"></script>
}